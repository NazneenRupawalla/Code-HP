<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:background="@drawable/home_background_gradient_color"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/enter_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="39dp"
        android:text="Enter Payment Details"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/enter_details"
        android:layout_margin="1dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/background_border"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignLeft="@+id/relativeLayout4"
            android:layout_below="@+id/enter_details"
            android:layout_margin="1dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/image3" >

            <TextView
                android:id="@+id/pay_amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="You are paying.. Rs"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/pay_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="32dp"
                android:layout_toRightOf="@+id/pay_amount_text"
                android:text="280"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_margin="1dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/background_border"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_above="@+id/relativeLayout1"
            android:layout_centerHorizontal="true"
            android:layout_margin="1dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/image3" >

            <Button
                android:id="@+id/pay_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Pay Now" />

            <TextView
                android:id="@+id/name_on_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/pay_now"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="18dp"
                android:text="Name on card"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/expiry_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Expiry Date:"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/CVV_no_value"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/name_on_card"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:inputType="phone" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/name_on_card_value"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/card_no_value"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_above="@+id/name_on_card_value"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="28dp"
                android:ems="10"
                android:inputType="phone" />

            <TextView
                android:id="@+id/CVV_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/card_no_value"
                android:text="CVV no."
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/expiry_date_value"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="date" />

            <TextView
                android:id="@+id/card_no."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/expiry_date_value"
                android:layout_alignParentLeft="true"
                android:text="Enter card no."
                android:textColor="@color/black" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>