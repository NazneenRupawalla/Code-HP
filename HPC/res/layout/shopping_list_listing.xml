<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outer_wrapper"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/widget38"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="@drawable/header_gradient_color" >

        <TextView
            android:id="@+id/shopping_list_name_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Lists"
            android:textColor="#636363"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/back_to_home_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/header_back" />

        <ImageView
            android:id="@+id/add_list_button_separator"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/add_image_button"
            android:src="@drawable/header_separator" />

        <ImageView
            android:id="@+id/add_image_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="@id/back_to_home_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="@id/back_to_home_button"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/header_add" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/custom_list_count_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:background="@drawable/custom_title_bar_gradient_color" >

        <TextView
            android:id="@+id/shopping_lists_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <ListView
        android:id="@+id/shopping_list_lists"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@android:color/transparent"
        android:drawSelectorOnTop="false" />

</LinearLayout>