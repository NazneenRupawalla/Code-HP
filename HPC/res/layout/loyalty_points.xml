<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:orientation="vertical"
              android:background="#F3F2F2"
              android:layout_height="fill_parent">
    <RelativeLayout
            android:id="@+id/widget38"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:background="@drawable/header_gradient_color">
        <TextView
                android:id="@+id/shopping_list_name_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/loyalty_points_header"
                android:textColor="#636363"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"/>
        <ImageView
                android:id="@+id/back_to_home_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/header_back"
                android:layout_alignParentLeft="true"/>
    </RelativeLayout>
    <LinearLayout android:background="@drawable/custom_title_bar_gradient_color"
                  android:layout_width="fill_parent"
                  android:layout_height="25dp"
                  android:id="@+id/android_green_bar">

    </LinearLayout>

    <RelativeLayout android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_below="@id/android_green_bar"
                    android:padding="10dp"
                    android:id="@+id/accumulated_loyalty_points"
                    android:layout_gravity="center">

        <TextView android:id="@+id/loyalty_points_text"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textColor="#5F5F5F"
                  android:gravity="center_horizontal"
                  android:textSize="20dp"
                  android:text="@string/loyalty_points_text"/>

        <TextView android:textStyle="bold"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:textSize="40dp"
                  android:padding="5dp"
                  android:textColor="#7ec52a"
                  android:layout_below="@id/loyalty_points_text"
                  android:id="@+id/loyalty_points"/>

        <TextView android:id="@+id/loyalty_points_from_sc_text"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textColor="#5F5F5F"
                  android:layout_below="@id/loyalty_points"
                  android:paddingTop="10dp"
                  android:gravity="center_horizontal"
                  android:textSize="20dp"
                  android:text="@string/loyalty_points_from_sc_text"/>

        <TextView android:textStyle="bold"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:textSize="60dp"
                  android:paddingTop="10dp"
                  android:textColor="#7ec52a"
                  android:layout_below="@id/loyalty_points_from_sc_text"
                  android:id="@+id/loyalty_points_sc"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_gradient_color">

        <Button android:layout_width="wrap_content"
                android:text="@string/redeem_text"
                android:padding="15dp"
                android:textColor="#ffffff"
                android:background="@drawable/custom_title_bar_gradient_color"
                android:layout_below="@id/accumulated_loyalty_points"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>