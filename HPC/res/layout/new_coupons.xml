<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <RelativeLayout
            android:id="@+id/widget38"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:background="@drawable/header_gradient_color">
        <TextView
                android:id="@+id/shopping_list_name_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/loyalty_points_header"
                android:textColor="#636363"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"/>
        <ImageView
                android:id="@+id/back_to_home_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/header_back"
                android:layout_alignParentLeft="true"/>
    </RelativeLayout>
    <LinearLayout android:background="@drawable/custom_title_bar_gradient_color"
                  android:layout_width="fill_parent"
                  android:layout_height="25dp"
            >
        <TextView
                android:id="@+id/coupons_count"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="#ffffff"/>
    </LinearLayout>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@android:id/list"
            />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/no_coupons_available"
            android:id="@android:id/empty"
            />

</LinearLayout>

